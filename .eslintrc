{
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "double"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-console": 0,
        "comma-dangle": 0,
        "no-unused-vars": [2, {
            "args": "after-used",
            "argsIgnorePattern": "^_"
        }]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true,
    },
    "extends": "eslint:recommended"
}
